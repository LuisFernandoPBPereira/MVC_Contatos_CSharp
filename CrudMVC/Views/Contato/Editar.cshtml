@model ContatoModel;
@{
    ViewData["Title"] = "Criar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Editar">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label for="exampleInputName1" class="form-label">Nome</label>
        <input asp-for="Nome" type="text" class="form-control" id="exampleInputName" aria-describedby="nameHelp" placeholder="Digite o nome do contato">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">E-mail</label>
        <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail" placeholder="email@exemplo.com">
    </div>
    <div class="mb-3">
        <label for="exampleInputSmartphone" class="form-label">Celular</label>
        <input asp-for="Celular" type="text" class="form-control" id="exampleInputPhone" placeholder="Digite o telefone do contato">
    </div>
    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a asp-controller="Contato" asp-action="Index" role="button" class="btn btn-secondary btn-block">Voltar</a>
</form>