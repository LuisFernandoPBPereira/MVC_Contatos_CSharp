@using CrudMVC.Enums
@model UsuarioModel;
@{
    ViewData["Title"] = "Editar Usuáio";
}

<div class="text-center">
    <h1 class="display-4">Editar Usuário</h1>
</div>
<!--Aqui Configuramos o formulário para visualizar a Controller Contato com a ação Criar, sendo o http POST-->
<!--Html.ValidationMessageFor faz a validação do campo HTML-->
<form asp-controller="Usuario" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="exampleInputName1" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="exampleInputName" aria-describedby="nameHelp" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail" class="form-label">Email</label>
        <input type="email" asp-for="Email" class="form-control" id="exampleInputEmail" placeholder="Digite o email do usuário">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="mb-3">
        <label for="exampleInputLogin" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="exampleInputLogin" placeholder="Digite o login do usuário">
        @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="mb-3">
        <label for="exampleInputLogin" class="form-label">Perfil</label>
        <select asp-for="Perfil" class="form-control">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Admin">Administrador</option>
            <option value="@PerfilEnum.Padrao">Padrão</option>
        </select>
        @Html.ValidationMessageFor(x => x.Perfil)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a asp-controller="Usuario" asp-action="Index" role="button" class="btn btn-secondary btn-block">Voltar</a>
</form>